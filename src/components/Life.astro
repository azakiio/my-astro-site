---
import { life } from "layouts/LifeTemplate.astro";
import { random } from "lodash-es";

interface Props {
  data: Partial<typeof life>;
}
const { data } = Astro.props;
const path = Astro.url.pathname; // move to props

const keys = Object.keys(data);
const { length } = keys;
---

<div class="flex flex-col items-center">
  <div
    class="grid grid-cols-5 grid-rows-5 justify-center justify-items-center items-center gap-4 max-w-lg w-[100vmin] aspect-square p-4"
  >
    {
      keys.map((key, i) => (
        <a
          href={`${path}/${key}`}
          class="p-4 rounded-2xl flex items-center justify-center uppercase font-bold flex-1 flex-shrink-0 border-2 col-sta"
          style={{
            borderColor: `hsl(${(i / length) * 360} 100% 75%)`,
          }}
        >
          {key}
        </a>
      ))
    }
  </div>
</div>
